      <span style="color:#f92672">options</span>: 
        --<span style="color:#ae81ff">workdir /src </span>
    <span style="color:#f92672">steps</span>:
      - <span style="color:#f92672">name</span>: <span style="color:#ae81ff">Checkout</span>
